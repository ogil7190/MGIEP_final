<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/home"
    android:keepScreenOn="true"
    android:layout_height="match_parent"
    tools:context="edu.mriu.kankhol.HomeActivity">

    <RelativeLayout
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">

        <ImageView
            app:srcCompat="@drawable/ic_settings_black_48px"
            android:tint="#555555"
            android:layout_margin="30px"
            android:layout_centerVertical="true"
            android:background="@drawable/round_textview"
            android:id="@+id/btn_settings"
            android:layout_width="80px"
            android:layout_height="80px" />

        <ImageView
            android:layout_margin="30px"
            android:layout_centerVertical="true"
            android:id="@+id/btn_info"
            app:srcCompat="@drawable/ic_info_black_24px"
            android:tint="#555555"
            android:layout_alignParentEnd="true"
            android:background="@drawable/round_textview"
            android:layout_width="80px"
            android:layout_height="80px" />

        <ImageView
            android:layout_toStartOf="@+id/btn_info"
            android:layout_margin="30px"
            android:layout_centerVertical="true"
            android:background="@drawable/round_textview"
            android:id="@+id/btn_document"
            app:srcCompat="@drawable/ic_help_black_24px"
            android:tint="#555555"
            android:layout_width="80px"
            android:layout_height="80px" />

        <ImageView
            android:layout_toStartOf="@+id/btn_document"
            android:layout_margin="30px"
            android:background="@drawable/round_textview"
            android:layout_centerVertical="true"
            android:id="@+id/btn_report"
            app:srcCompat="@drawable/ic_assessment_black_24dp"
            android:tint="#555555"
            android:layout_width="80px"
            android:layout_height="80px" />

    </RelativeLayout>

    <android.support.v7.widget.CardView
        android:id="@+id/CARDVIEW0"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/reset"
        android:layout_alignParentStart="true"
        android:layout_below="@id/top_bar"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_margin="2dp"
        app:cardCornerRadius="5dp">

    <RelativeLayout
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/start"
            android:layout_width="200px"
            android:layout_height="200px"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@drawable/round"
            android:padding="5dp"
            android:text="खेलो"
            android:textColor="#ffffff"
            android:textSize="90px" />
    </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>
