<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:keepScreenOn="true"
    android:layout_height="match_parent"
    tools:context="edu.mriu.kankhol.Sikho">

    <RelativeLayout
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">

        <ImageView
            app:srcCompat="@drawable/ic_volume_up_black_24px"
            android:tint="#555555"
            android:layout_margin="30px"
            android:layout_centerVertical="true"
            android:background="@drawable/round_textview"
            android:id="@+id/btn_play_pause"
            android:layout_width="80px"
            android:layout_height="80px" />

        <ImageView
            android:layout_margin="30px"
            android:layout_centerVertical="true"
            android:id="@+id/btn_info"
            app:srcCompat="@drawable/ic_info_black_24px"
            android:tint="#555555"
            android:layout_alignParentEnd="true"
            android:background="@drawable/round_textview"
            android:layout_width="80px"
            android:layout_height="80px" />

        <ImageView
            android:layout_toStartOf="@+id/btn_info"
            android:layout_margin="30px"
            android:layout_centerVertical="true"
            android:background="@drawable/round_textview"
            android:id="@+id/btn_document"
            app:srcCompat="@drawable/ic_help_black_24px"
            android:tint="#555555"
            android:layout_width="80px"
            android:layout_height="80px" />

        <ImageView
            android:layout_toStartOf="@+id/btn_document"
            android:layout_margin="30px"
            android:background="@drawable/round_textview"
            android:layout_centerVertical="true"
            android:id="@+id/btn_report"
            app:srcCompat="@drawable/ic_assessment_black_24dp"
            android:tint="#555555"
            android:layout_width="80px"
            android:layout_height="80px" />

    </RelativeLayout>

    <android.support.v7.widget.CardView
        android:id="@+id/CARDVIEW0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/controls"
        android:layout_alignParentStart="true"
        android:layout_below="@id/top_bar"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_margin="10dp"
        app:cardCornerRadius="10dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/two"
                android:layout_width="200px"
                android:layout_height="280px"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@+id/helper"
                android:textAlignment="textEnd"
                android:textColor="#aa1122"
                android:textSize="250px" />

            <TextView
                android:id="@+id/one"
                android:layout_width="200px"
                android:layout_height="280px"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/helper"
                android:textAlignment="textStart"
                android:textColor="#aa1122"
                android:textSize="250px" />

            <TextView
                android:id="@+id/helper"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <LinearLayout
        android:id="@+id/controls"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageButton
            android:layout_margin="20px"
            android:id="@+id/backward"
            android:layout_width="80px"
            android:layout_height="80px"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:background="@drawable/round_textview"
            android:backgroundTint="#ffffff"
            android:tint="#555555"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/ic_arrow_back_black_24px" />

        <ImageButton
            android:layout_margin="20px"
            android:id="@+id/replay"
            android:layout_width="80px"
            android:layout_height="80px"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:background="@drawable/round_textview"
            android:backgroundTint="#ffffff"
            android:tint="#555555"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/ic_replay_black_24dp" />

        <ImageButton
            android:layout_margin="20px"
            android:id="@+id/play_pause"
            android:layout_width="80px"
            android:layout_height="80px"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:background="@drawable/round_textview"
            android:backgroundTint="#ffffff"
            android:tint="#555555"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/ic_pause_circle_filled_black_24dp" />

        <ImageButton
            android:layout_margin="20px"
            android:id="@+id/next"
            android:layout_width="80px"
            android:layout_height="80px"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:background="@drawable/round_textview"
            android:backgroundTint="#ffffff"
            android:tint="#555555"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/ic_arrow_forward_black_24px" />
    </LinearLayout>
</RelativeLayout>